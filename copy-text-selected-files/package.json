{
  "name": "copy-text-selected-files",
  "displayName": "Copy Text of Selected Files",
  "description": "Copies the contents of the selected files to the clipboard.",
  "publisher": "iyulab",
  "repository": {
    "type": "git",
    "url": "https://github.com/iyulab/vs-tools"
  },
  "icon": "logo_128.png",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "development",
    "code",
    "copy",
    "clipboard",
    "text",
    "utilities",
    "explorer",
    "gpt"
  ],
  "activationEvents": [
    "onCommand:copy-text-selected-files.copyFilesContent"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "copy-text-selected-files.copyFilesContent"
        }
      ]
    },
    "commands": [
      {
        "command": "copy-text-selected-files.copyFilesContent",
        "title": "Copy Content of Selected Files",
        "category": "Explorer"
      }
    ],
    "keybindings": [
      {
        "command": "copy-text-selected-files.copyFilesContent",
        "key": "ctrl+alt+c",
        "when": "explorerViewletVisible || editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.35.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
  }
}
